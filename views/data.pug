extends layout

block content
    .content
        .container
            each intervento in interventions
                .intervention-card
                    h3= intervento.date
                    p= intervento.intervento
                    .info-row
                        span Chilometri: #{intervento.kilometri}
                        span Costo: €#{intervento.costo}
                    .action-row
                        a.btn-edit(href=`/update/${intervento._id}`) ✏️ Edit
                        form(method="POST", action=`/delete/${intervento._id}?_method=DELETE`)
                            input(type="hidden", name="_method", value="DELETE")
                            button.btn-delete(type="submit") 🗑 Delete
